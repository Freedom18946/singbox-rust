// Route explain command JSON output schema
// Contract: fixed field names, case-sensitive, stable across versions
{
  "dest": "<host|ip:port>",  // input destination
  "decision": {
    "phase": "cidr|geo|suffix|exact|default",  // matching phase
    "rule_id": "sha256-8",  // stable 8-char rule fingerprint
    "reason": "cidr:10.0.0.0/8|geo:CN|suffix:.com|exact:example.com|default",  // match reason
    "steps": [  // decision steps (when --trace enabled)
      {
        "phase": "cidr",
        "rule_id": "abc12345",
        "matched": true,
        "reason": "cidr:10.0.0.0/8"
      }
    ]
  },
  "outbound": "proxy|direct|block",  // target outbound name
  "chain": ["cidr:10.0.0.0/8", "geo:CN"],  // rule chain that matched
  "trace": {  // optional, only when --trace flag used
    "trace_id": "uuid-v4",  // optional correlation ID
    "steps": [
      // ... trace steps for debugging
    ]
  }
}