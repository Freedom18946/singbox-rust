[Unit]
Description=singbox-rust service
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/singbox-rust --config /etc/singbox/config.yaml
WorkingDirectory=/etc/singbox
Environment=RUST_LOG=info
Environment=SB_METRICS_ADDR=0.0.0.0:18088
Restart=on-failure
RestartSec=3
User=singbox
Group=singbox

[Install]
WantedBy=multi-user.target

